<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView 
        android:id="@+id/zipLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zipCodeString"
        android:textSize="@dimen/text_view_dimen" />
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/zipHintString"
        android:inputType="number" />

    <TextView 
        android:id="@+id/heatTypeLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heatTypeString"
        android:textSize="@dimen/text_view_dimen" />
        
    <Spinner
        android:id="@+id/energySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
  	<Button 
  	    android:id="@+id/nextButton"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_marginTop="210dp"
  	    android:layout_marginLeft="220dp"
  	    android:text="@string/nextButtonString" />
    

</LinearLayout>
